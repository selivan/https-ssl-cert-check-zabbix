<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2021-04-18T15:28:09Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Web SSL Certificate Monitor</template>
            <name>Template Web SSL Certificate Monitor</name>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Certificates</name>
                </application>
                <application>
                    <name>ssl_expire</name>
                </application>
                <application>
                    <name>ssl_valid</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>ssl_cert_check_expire</name>
                    <key>ssl_cert_check_expire[{$IPADDR},{$SSLPORT},{$SSLDOMAIN},{$TIMEOUT}]</key>
                    <delay>{$UPDATEINTERVAL}</delay>
                    <history>7d</history>
                    <trends>14d</trends>
                    <units>d</units>
                    <applications>
                        <application>
                            <name>ssl_expire</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last(#3,3)}&lt;{$EXPIRESWITHIN}</expression>
                            <name>Действие сертификата заканчивается, осталось {ITEM.VALUE} дней</name>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>ssl_cert_check_valid</name>
                    <key>ssl_cert_check_valid[{$IPADDR},{$SSLPORT},{$SSLDOMAIN},{$TIMEOUT}]</key>
                    <delay>{$UPDATEINTERVAL}</delay>
                    <history>7d</history>
                    <trends>14d</trends>
                    <applications>
                        <application>
                            <name>ssl_valid</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last(#3,5)}=0</expression>
                            <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                            <recovery_expression>{last(#3,5)}=1</recovery_expression>
                            <name>Сертификат не прошел валидацию!</name>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$EXPIRESWITHIN}</macro>
                    <value>30</value>
                    <description>Кол-во дней до истечения сертификата.</description>
                </macro>
                <macro>
                    <macro>{$IPADDR}</macro>
                    <value>140.82.121.4</value>
                    <description>IP адрес сервера</description>
                </macro>
                <macro>
                    <macro>{$SSLDOMAIN}</macro>
                    <value>github.com</value>
                    <description>Доменное имя</description>
                </macro>
                <macro>
                    <macro>{$SSLPORT}</macro>
                    <value>443</value>
                    <description>Порт на котором проверяем ssl</description>
                </macro>
                <macro>
                    <macro>{$TIMEOUT}</macro>
                    <value>10</value>
                    <description>Время ожидания</description>
                </macro>
                <macro>
                    <macro>{$UPDATEINTERVAL}</macro>
                    <value>12h</value>
                    <description>Как часто обновлять информацию по сертификату.</description>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
